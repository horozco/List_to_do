<fieldset>
    <legend>Lists To Do</legend>
	<div class = "form_list">
			<%if @lists.size > 0 %>
				<%@lists.each do |list| %>
					<div class = "well">
					<h3><%=link_to list.title, list%></h3>
					<%=link_to "Edit title", edit_list_path(list), class: "btn"%>
					<%=link_to "Delete", list, method: :delete, data:{confirm: "Are you sure your want to delete this list?"}, class: "btn"%>
					</div>
				<%end%>
			<%else%>
				<div class = "well">
				<h3>You have not created a list</h3>
				</div>	
			<%end%>
	</div>
	<%=link_to "Create a new List", new_list_path, class: "btn btn-primary"%>
</fieldset>